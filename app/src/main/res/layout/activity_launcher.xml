<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.trial.LauncherActivity">


    <ImageButton
        android:id="@+id/disasterdoc"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:visibility="invisible"
        android:src="@drawable/disaster"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"/>
    <TextView
        android:id="@+id/tv1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Disaster stats"
        android:visibility="invisible"
        android:layout_below="@id/disasterdoc"
        android:layout_marginLeft="62dp"
        android:textColor="#000"
        android:textSize="15dp"/>

    <ImageButton
        android:id="@+id/healthres"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:src="@drawable/health1"
        android:visibility="invisible"
        android:layout_toRightOf="@id/disasterdoc"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Health Response"
        android:visibility="invisible"
        android:layout_below="@id/healthres"
        android:layout_toRightOf="@id/disasterdoc"
        android:layout_marginLeft="40dp"
        android:textSize="15dp"
        android:textColor="#000"
        android:id="@+id/tv2" />

    <ImageButton
        android:id="@+id/mapplot"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:src="@drawable/mapicon"
        android:layout_below="@id/disasterdoc"
        android:visibility="invisible"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"/>
    <TextView
        android:id="@+id/tv3"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="map plot"
        android:visibility="invisible"
        android:layout_below="@id/mapplot"
        android:layout_marginLeft="60dp"
        android:textSize="15dp"
        android:textColor="#000"/>

    <ImageButton
        android:id="@+id/viewreview"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:src="@drawable/viewreview"
        android:visibility="invisible"
        android:layout_below="@id/healthres"
        android:layout_toRightOf="@id/mapplot"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="60dp"/>
    <TextView
        android:id="@+id/tv4"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="View Review"
        android:visibility="invisible"
        android:layout_below="@id/viewreview"
        android:layout_toRightOf="@id/mapplot"
        android:layout_marginLeft="70dp"
        android:textColor="#000"
        android:textSize="15dp"/>

    <ProgressBar
        android:id="@+id/pbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />


</RelativeLayout>
