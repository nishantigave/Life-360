<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.trial.DisasterDataAdd">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/IdTV"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Id :"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
            <EditText
                android:id="@+id/Idtext"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/IdTV"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Id"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/nameTV"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Disaster name :"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
        <EditText
            android:id="@+id/Nametext"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/nameTV"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/Type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Name">

            <TextView
                android:id="@+id/TypeTV"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Disaster type :"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
            <EditText
                android:id="@+id/Typetext"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/TypeTVTV"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/Injuries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Type">

            <TextView
                android:id="@+id/InjuriesTV"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Impact and Injuries :"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
            <EditText
                android:id="@+id/Injuriestext"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/InjuriesTV"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/Impact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Injuries">

            <TextView
                android:id="@+id/ImpactTV"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Impact (Out of 10) :"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
            <EditText
                android:id="@+id/Impacttext"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_toRightOf="@+id/ImpactTV"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Impact">

            <TextView
                android:id="@+id/YearTV"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Year :"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
            <EditText
                android:id="@+id/Yeartext"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/YearTV"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/State"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Year">

            <TextView
                android:id="@+id/StateTV"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="State and Area :"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
            <EditText
                android:id="@+id/Statetext"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/StateTV"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Death"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/State">

            <TextView
                android:id="@+id/DeathTV"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Death Toll :"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
            <EditText
                android:id="@+id/Deathtext"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_toRightOf="@+id/Deathtext"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Death">

            <TextView
                android:id="@+id/LatitudeTV"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Latitude :"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
            <EditText
                android:id="@+id/Latitudetext"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/LatitudeTV"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/Longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Latitude">

            <TextView
                android:id="@+id/LongitudeTV"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Longitude :"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
            <EditText
                android:id="@+id/Longitudetext"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/LongitudeTV"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Longitude">
        <Button
            android:id="@+id/Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Submit" />
</LinearLayout>
    </RelativeLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
